{
  "kind": "collectionType",
  "collectionName": "blog_posts",
  "info": {
    "name": "Blog Post"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "Title": {
      "type": "string"
    },
    "Content": {
      "type": "text"
    },
    "Excerpt": {
      "type": "text"
    },
    "coverImage": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": false
    },
    "Slug": {
      "type": "uid",
      "targetField": "Title"
    },
    "Date": {
      "type": "date",
      "required": true
    },
    "author": {
      "model": "author",
      "via": "blog_posts"
    }
  }
}
